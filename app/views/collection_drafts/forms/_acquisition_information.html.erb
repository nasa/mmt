<!-- Platforms [r] -->
<fieldset class="eui-accordion is-closed" id="platforms">
  <div class="eui-accordion__header">
    <h3 class="eui-accordion__title eui-required-o always-required">Platforms</h3>
    <%= mmt_help_icon(
      title: 'Platforms',
      help: 'properties/Platforms',
      help_url: 'Platform'
    ) %>
    <div class="eui-accordion__icon" tabindex="0">
      <i class="eui-icon eui-fa-chevron-circle-down"></i>
      <span class="eui-sr-only">Toggle Platforms</span>
    </div>
  </div>
  <div class="eui-accordion__body">
    <div class="grid-row taller">
      <div class="col-12">
        <%= render partial: 'collection_drafts/forms/type', locals: {
            type: 'platform',
            values: draft.draft['Platforms'] || [{}],
            name_prefix: "draft_platforms_",
            multiple: true,
            options: {} } %>
      </div>
    </div>
  </div>
</fieldset>

