<div class="grid_row sub-fields">
  <!-- Footprint int -->
  <%= mmt_text_field(
      name: 'footprint',
      title: 'Footprint',
      prefix: name_prefix,
      value: footprints['Footprint'],
      help: 'definitions/FootprintType/properties/Footprint',
      validate: true,
      required: true,
      classes: 'mmt-number'
  ) %>

  <!-- FootprintUnit enum: Kilometer, Meter -->
  <%= mmt_select(
      name: 'footprint_unit',
      title: 'Footprint Unit',
      prefix: name_prefix,
      value: footprints['FootprintUnit'],
      help: 'definitions/FootprintType/properties/FootprintUnit',
      options: DraftsHelper::FootprintUnitOptions,
      required: true
  ) %>

  <!-- Description String -->
  <%= mmt_text_field(
      name: 'description',
      title: 'Description',
      prefix: name_prefix,
      value: footprints['Description'],
      help: 'definitions/FootprintType/properties/Description',
      validate: true,
  ) %>
</div>
