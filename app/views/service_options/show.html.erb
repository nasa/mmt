<div class="grid_row row-content">
  <section>
    <h2><%= @service_option['Name'] %></h2>

    <p>
      <span class="inline-label">Last Updated:</span> <%= echo_formatted_date(@service_option['LastUpdate'], default: 'Never Updated') %>
    </p>

    <p>
      <span class="inline-label">Description:</span>
      <%= @service_option['Description'] %>
    </p>

    <div class="grid_row">
      <span class="inline-label">Form XML:</span>

      <pre><%= @service_option['Form'] %></pre>
    </div>

    <%= link_to 'Edit', edit_service_option_path(@service_option['Guid']), class: 'eui-btn' %>
    <%= link_to 'Delete', "#delete-service-option-modal", class: 'display-modal eui-btn eui-btn--red' %>
    <div id="delete-service-option-modal" class="eui-modal-content">
      <a href="#" class="modal-close float-r"><i class="fa fa-times"></i><span class="is-invisible">Close</span></a>
      <p>Are you sure you want to delete this service option?</p>
      <p>
        <a href="javascript:void(0)" class="eui-btn modal-close">No</a>
        <%= link_to 'Yes', service_option_path(@service_option['Guid']), method: :delete, class: 'eui-btn--blue spinner' %>
      </p>
    </div>
  </section>
</div>
