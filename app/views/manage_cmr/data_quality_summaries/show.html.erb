<div class="grid-row row-content">
  <section>
    <% meta = @summary.fetch('meta', {}) %>
    <% umm = @summary.fetch('umm', {}) %>
    <h2><%= umm.fetch('Name', '') %></h2>

    <div class="space-bot">
      <%= raw umm.fetch('Summary', '') %>
    </div>

    <%= link_to 'Edit', edit_data_quality_summary_path(meta.fetch('concept-id', '')), class: 'eui-btn' %>

    <%= link_to 'Delete', "#delete-summary-modal", class: 'display-modal eui-btn eui-btn--red' %>
    <div id="delete-summary-modal" class="eui-modal-content">
      <a href="#" class="modal-close float-r"><i class="fa fa-times"></i><span class="is-invisible">Close</span></a>
      <p>Are you sure you want to delete this data quality summary?</p>
      <p>
        <a href="javascript:void(0)" class="eui-btn modal-close">No</a>
        <%= link_to 'Yes', data_quality_summary_path(meta.fetch('native-id', '')), method: :delete, class: 'eui-btn--blue spinner' %>
      </p>
    </div>
  </section>
</div>
