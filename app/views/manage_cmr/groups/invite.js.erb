var valid_email = <%= @valid_email %>

// display either success or failure
if (valid_email) {
  $('.invite-fail').removeClass('is-invisible');
}
else {
  $('.invite-success').removeClass('is-invisible');
}

// Clear input fields
$('#invite_first_name').val('');
$('#invite_last_name').val('');
$('#invite_email').val('');
